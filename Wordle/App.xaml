<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Default Styles -->
            <x:Double x:Key="GlobalFontSize">16</x:Double>
            <!-- Light Mode Styles -->
            <Style x:Key="LightModeLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
            </Style>
            <Style x:Key="LightModePageStyle" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="White" />
            </Style>

            <!-- Dark Mode Styles -->
            <Style x:Key="DarkModeLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
            </Style>
            <Style x:Key="DarkModePageStyle" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
