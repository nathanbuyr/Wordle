<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.ProgressionPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
            Style="{DynamicResource PageStyle}">

    <StackLayout>
        <Label x:Name="LabelProgressionData" Style="{DynamicResource LabelStyle}"/>
        <!-- Adds data -->
        
        <!-- Button to go back to StartPage -->
        <Button Text="Back" Clicked="OnBackToStartClicked" HorizontalOptions="Start" VerticalOptions="End" Margin="20,0,0,20" BackgroundColor="Blue" Grid.Column="0" />
    </StackLayout>

</ContentPage>
